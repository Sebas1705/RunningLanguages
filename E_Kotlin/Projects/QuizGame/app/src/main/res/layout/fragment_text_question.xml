<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".fragments.TextFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:background="@drawable/gradient_init">

            <TextView
                android:id="@+id/question_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="top|center"
                android:text="@string/text_default"
                android:textAlignment="center"
                android:textColor="@color/textPrimary"
                android:textSize="30sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/transparent_background">

            <RadioGroup
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/transparent_background"
                android:paddingVertical="20dp">

                <RadioButton
                    android:id="@+id/radio_answer_A"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="0.2"
                    android:background="@color/black"
                    android:contentDescription="@string/content_option_A"
                    android:text="@string/text_default"
                    android:textColor="@color/colorRadio" />

                <RadioButton
                    android:id="@+id/radio_answer_B"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="0.2"
                    android:background="@color/black"
                    android:contentDescription="@string/content_option_B"
                    android:text="@string/text_default"
                    android:textColor="@color/colorRadio" />

                <RadioButton
                    android:id="@+id/radio_answer_C"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="0.2"
                    android:background="@color/black"
                    android:contentDescription="@string/content_option_C"
                    android:text="@string/text_default"
                    android:textColor="@color/colorRadio" />

                <RadioButton
                    android:id="@+id/radio_answer_D"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:background="@color/black"
                    android:contentDescription="@string/content_option_D"
                    android:text="@string/text_default"
                    android:textColor="@color/colorRadio" />

            </RadioGroup>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="@drawable/transparent_background">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/next_question_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_form"
                android:text="@string/next_questions"
                android:textAlignment="center"
                android:padding="20dp"
                android:textColor="@color/textPrimary"
                android:textSize="20sp" />
        </RelativeLayout>

    </LinearLayout>
</FrameLayout>