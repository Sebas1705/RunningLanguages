<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@drawable/gradient_icon"
    android:elevation="4dp"
    android:paddingEnd="15dp"
    tools:ignore="RtlSymmetry">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/point_text"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-thin"
            android:text="@string/points_bargame"
            android:gravity="center"
            android:textColor="@color/colorRadio"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/lives"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-thin"
            android:text="@string/lives_bargame"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorRadio"
            android:textSize="30sp"
            android:textStyle="bold|italic"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1">

            <ImageView
                android:id="@+id/heart0"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:contentDescription="@string/content1_bargame"
                android:src="@drawable/heart"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1">

            <ImageView
                android:id="@+id/heart1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:contentDescription="@string/content2_bargame"
                android:src="@drawable/heart"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1">

            <ImageView
                android:id="@+id/heart2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:contentDescription="@string/content3_bargame"
                android:src="@drawable/heart"/>
        </RelativeLayout>

    </LinearLayout>
</androidx.appcompat.widget.Toolbar>