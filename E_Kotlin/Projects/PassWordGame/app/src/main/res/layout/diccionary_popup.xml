<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="500dp"
    android:background="@drawable/icon_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/secondary_grad"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jetbrains_mono_thin"
            android:text="@string/palabras"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:paddingVertical="20dp"/>
        <ImageButton
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/quit"
            android:scaleType="fitCenter"
            android:background="@drawable/transparent"
            android:contentDescription="@string/contentDescriptionCancelPopup" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </androidx.recyclerview.widget.RecyclerView>

    <include layout="@layout/default_bottom_bar"/>
</androidx.appcompat.widget.LinearLayoutCompat>