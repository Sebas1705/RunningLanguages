<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/gradient_background">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="@color/textPrimary"
            android:padding="10dp"
            android:textStyle="bold"
            android:background="@drawable/gradient_init"
            android:text="@string/select_catpop" />


    <RadioGroup
        android:id="@+id/categoryRadioGroup"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:maxWidth="320dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/allOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/radio_form"
            android:paddingHorizontal="90dp"
            android:paddingVertical="10dp"
            android:text="@string/Category_ALL"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/sportsOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/radio_form"
            android:paddingHorizontal="90dp"
            android:paddingVertical="10dp"
            android:text="@string/Category_SPORTS"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/scienceOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/radio_form"
            android:paddingHorizontal="90dp"
            android:paddingVertical="10dp"
            android:text="@string/Category_SCIENCE"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/historyOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/radio_form"
            android:paddingHorizontal="90dp"
            android:paddingVertical="10dp"
            android:text="@string/Category_HISTORY"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/tvOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/radio_form"
            android:paddingHorizontal="90dp"
            android:paddingVertical="10dp"
            android:text="@string/Category_SERIES"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/hardOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/radio_form"
            android:paddingHorizontal="90dp"
            android:paddingVertical="10dp"
            android:text="@string/Category_HARD"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/SURVIVAL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/radio_form"
            android:paddingHorizontal="90dp"
            android:paddingVertical="10dp"
            android:text="@string/Category_SURVIVAL"
            android:textColor="@color/black"
            android:textSize="15sp" />


    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_init">
        <Button
            android:id="@+id/confirmCategoryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:text="@string/confirm_catpop" />
    </RelativeLayout>


</LinearLayout>